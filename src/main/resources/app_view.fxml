<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="700.0" spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AppController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Daftar Hadir Perpustakaan UPI">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <VBox spacing="10.0">
         <children>
            <Label text="Input Form">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="100.0" text="NIM:" />
                  <TextField fx:id="field1" prefWidth="200.0" promptText="Enter value" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="100.0" text="NAMA:" />
                  <TextField fx:id="field2" prefWidth="200.0" promptText="Enter value" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </VBox>

      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" prefWidth="100.0" text="Add" />
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdate" prefWidth="100.0" text="Update" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" prefWidth="100.0" text="Delete" />
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" prefWidth="100.0" text="Clear" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>

      <TableView fx:id="dataTable" prefHeight="300.0">
         <columns>
            <TableColumn fx:id="column1" prefWidth="150.0" text="Column 1" />
            <TableColumn fx:id="column2" prefWidth="150.0" text="Column 2" />
            <TableColumn fx:id="column3" prefWidth="150.0" text="Column 3" />
         </columns>
      </TableView>

      <Label fx:id="statusLabel" text="Status: Ready">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
   </children>
</VBox>
